</head>

@Html.ActionLink("Back To Instruments", "Index")
<h1>Instrument Rental Pricing</h1>
<p class="jumbotron" style="text-align:center; font-size:14px; background-color:#DFEBF6; padding:10px;">Click on the "New" or "Used" to view the pricing for the instrument selected.</p>
<!-- ACCORDIAN TABS -->


    <div class="content" style="margin:auto;">
        <div id="@ViewBag.Name" style="display:block;">
            <h4 class=" instrumentTitle" style="text-align:center">@ViewBag.Name</h4>
            <div style="text-align:center;">
                <img src="@ViewBag.Image" height="150" />
            </div>
            <div class="accordion">
                <!--Accordion 1-->

                @foreach (var item in Model)
                {

                    <div style="background-color:#DFEBF6">
                        <input id="@item.type" name="" type="checkbox" style="display: none" />
                        <label for="@item.type">@item.type</label>
                        <div class="article ac-medium" >
                            <div class="article_body clear-fix" >
                                <!--Insert Accordion 1 content here.-->
                                <p style="font-weight: 500; font-size:large;" > $@item.price.00/month </p>

                                <p style="font-size:medium;"></p>
                                <button style="background-color:#B80062; color: white; padding-left: 10px;">
                                    @Html.ActionLink("Rent Now", "Create", "Clients", new { id = item.instrumentID }, null)
                                </button>
                                

                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>

    <div class="jumbotron" style="background-color: #0062B8; padding-top: 1em; padding-bottom: 1em; padding-left: 1em; padding-right: 1em;">
        <p style="font-size:medium; color: white;">@ViewBag.ContractFull</p>
    </div>
