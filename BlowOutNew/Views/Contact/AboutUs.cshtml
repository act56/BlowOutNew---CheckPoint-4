
@{
    ViewBag.Title = "AboutUs";


}

@*This page displays the details about the owners and teachers who work at the store*@

<!-- Grid -->
<div class="w3-row-padding" id="about">
    <div class="w3-center w3-padding-64">
        <span class="w3-xlarge w3-bottombar w3-border-dark-grey w3-padding-16">Our Team</span>
    </div>

    <div class="w3-third w3-margin-bottom">
        <div class="w3-card-4" >
            <img src="~/Content/images/AboutUs/MatthewVaughn.jpg" alt="John" style="width:100%">
            <div class="w3-container">
                <h3>John Randolf</h3>
                <p class="w3-opacity" style="font-weight:700">Owner & Private Music Teacher</p>
                <p>
                    John has been in the music industry since 1994. Music brings him joy he can't find anywhere else.
                    He enjoys playing multiple instruments and providing private lessons for the Trumpet and Trombone.<br /><br /><br /><br /><br />
                </p>
                @*<p><button class="w3-button w3-light-grey w3-block">Contact</button></p>*@
            </div>
        </div>
    </div>

    <div class="w3-third w3-margin-bottom">
        <div class="w3-card-4">
            <img src="~/Content/images/AboutUs/Dolezal_JZD-Marek_Musil_Vert4x6.jpg" alt="Mike" style="width:100%">
            <div class="w3-container">
                <h3>Mike Ross</h3>
                <p class="w3-opacity" style="font-weight:700">Private Music Teacher</p>
                <p>
                    Mike has been working at BlowOut Instrument Rentals for 3 years and teaches private lesson for
                    individuals who play the Saxophone. <br /> <br /> Mike also enjoys playing in a local
                    jazz band, called Jazz Notes.<br /><br /><br />
                </p>
                @*<p><button class="w3-button w3-light-grey w3-block">Contact</button></p>*@
            </div>
        </div>
    </div>

    <div class="w3-third w3-margin-bottom" >
        <div class="w3-card-4">
            <img src="~/Content/images/AboutUs/KateHeadshots_Vert4x6jpg.jpg" alt="Kate" style="width:100%">
            <div class="w3-container"> 
                <h3>Kate Deardon</h3>
                <p class="w3-opacity" style="font-weight:700">Private Music Teacher</p>
                <p>
                    Kate is the newest member of the team at BlowOut Instrument Rentals.  We are excited to have her
                    musical talent as part of our team.  She brings with her 10 years of teaching experience. <br />
                    <br />She is looking forward to teaching anyone who  may be interested in playing the Trumpet or Trombone.
                </p>
                @*<p><button class="w3-button w3-light-grey w3-block">Contact</button></p>*@
            </div>
        </div>
    </div>
</div>

